@model TeknikServis.Entity.ViewModels.ProfileViewModel

@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_LayoutMusteriGenel.cshtml";
}
<header id="gtco-header" class="gtco-cover gtco-cover-sm" role="banner" style="background-image: url(images/img_bg_3.jpg)">
    <div class="overlay"></div>
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-12 col-md-offset-0 text-left">
                <div class="row row-mt-15em">
                    <div class="col-md-7 mt-text animate-box" data-animate-effect="fadeInUp">
                        <h1>Profil Bilgileri</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="gtco-section border-bottom">
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-12 animate-box">
                    <h3>Profilim</h3>

                    @using (Html.BeginForm("ArizaKayit", "Home", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div>
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.Ad)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Ad)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.Soyad)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Soyad)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.KullaniciAdi)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.KullaniciAdi)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.Email)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Email)
                                </dd>

                            </dl>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
