@model IEnumerable<TeknikServis.Entity.ViewModels.ArizaViewModel>

@{
    ViewBag.Title = "YonlendirilmemisArizalar";
    Layout = "~/Views/Shared/_LayoutIndexAdmin.cshtml";
}

<div class="card mb-3" style="align-content:center">
    <div class="card-header">
        <i class="fa fa-table"></i>Yönlendirilmemiş Arızalar
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UyeAdı)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TelNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Mesaj)
                </th>
                <th>  </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UyeAdı)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TelNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mesaj)
                    </td>
                    <td>
                        <a href="@Url.Action("Detaylar", "Admin", new { Area = "ServisYonetim" })"> Detaylar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
