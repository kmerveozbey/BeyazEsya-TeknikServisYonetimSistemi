@model IEnumerable<TeknikServis.Entity.ViewModels.ArizaViewModel>

@{
    ViewBag.Title = "YonlendirilmisArizalar";
    Layout = "~/Views/Shared/_LayoutIndexOperator.cshtml";
}

<div class="card mb-3" style="align-content:center">
    <div class="card-header">
        <i class="fa fa-table"></i>Arızalar
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UyeId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UyeAdı)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TelNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Mesaj)
                </th>
                <th> İşlemler </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UyeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UyeAdı)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TelNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mesaj)
                </td>
                <td>
                    <a href="@Url.Action("Detaylar", "Admin", new { Area = "ServisYonetim",id=item.ArizaId })"> Detaylar</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>